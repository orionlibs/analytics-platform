{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "go@1.25.1",
    "golangci-lint@2.0",
    "goreleaser@2.12.5",
    "python312@3.12.11"
  ],
  "shell": {
    "init_hook": [
      "echo 'Entering Python venv' && . $VENV_DIR/bin/activate",
      "echo 'Installing dependencies...' && make deps"
    ]
  }
}
