{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.k6.io/metric/1.0.0/schema.json",
  "title": "k6 Metric Schema v1",
  "description": "JSON schema for k6 metric objects",
  "$defs": {
    "Metric": {
      "type": "object",
      "description": "Base properties for all metrics",
      "required": [
        "name",
        "type",
        "contains",
        "values"
      ],
      "properties": {
        "name": {
          "type": "string",
          "description": "The metric name"
        },
        "type": {
          "type": "string",
          "enum": [
            "counter",
            "gauge",
            "rate",
            "trend"
          ],
          "description": "The metric type"
        },
        "contains": {
          "type": "string",
          "enum": [
            "default",
            "time",
            "data"
          ],
          "description": "The type of data the metric contains"
        },
        "values": {
          "type": "object",
          "oneOf": [
            {
              "$ref": "#/$defs/CounterValues"
            },
            {
              "$ref": "#/$defs/GaugeValues"
            },
            {
              "$ref": "#/$defs/RateValues"
            },
            {
              "$ref": "#/$defs/TrendValues"
            }
          ]
        }
      }
    },
    "CounterValues": {
      "type": "object",
      "description": "Counter metric values",
      "required": [
        "count"
      ],
      "additionalProperties": false,
      "properties": {
        "count": {
          "type": "number",
          "minimum": 0,
          "description": "Total count of events"
        }
      }
    },
    "GaugeValues": {
      "type": "object",
      "description": "Gauge metric values",
      "required": [
        "value",
        "min",
        "max"
      ],
      "additionalProperties": false,
      "properties": {
        "value": {
          "type": "number",
          "description": "Current/final gauge value"
        },
        "min": {
          "type": "number",
          "description": "Minimum observed value"
        },
        "max": {
          "type": "number",
          "description": "Maximum observed value"
        }
      }
    },
    "RateValues": {
      "type": "object",
      "description": "Rate metric values",
      "required": [
        "matches",
        "total",
        "rate"
      ],
      "additionalProperties": false,
      "properties": {
        "matches": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of 'true' events, i.e. occurrences of the event reflected by the metric"
        },
        "total": {
          "type": "integer",
          "minimum": 0,
          "description": "Total number of events (true and non-true)"
        },
        "rate": {
          "type": "number",
          "minimum": 0,
          "maximum": 1,
          "description": "Proportion of true events, calculated true / total (value between 0 and 1)"
        }
      }
    },
    "TrendValues": {
      "type": "object",
      "description": "Trend metric values with configurable statistics",
      "additionalProperties": false,
      "$comment": "Trend metrics' properties can be overridden, we don't require them to be present, and instead list the default ones.",
      "properties": {
        "avg": {
          "type": "number",
          "description": "Average (mean) value"
        },
        "min": {
          "type": "number",
          "description": "Minimum value"
        },
        "med": {
          "type": "number",
          "description": "Median value"
        },
        "max": {
          "type": "number",
          "description": "Maximum value"
        },
        "p(90)": {
          "type": "number",
          "description": "90th percentile"
        },
        "p(95)": {
          "type": "number",
          "description": "95th percentile"
        }
      }
    }
  }
}