{
  "name": "@opentelemetry/test-utils",
  "version": "0.1.0",
  "private": true,
  "description": "Utility package for OpenTelemetry Browser tests.",
  "keywords": [
    "opentelemetry",
    "browser",
    "web",
    "test-utils"
  ],
  "homepage": "https://github.com/open-telemetry/opentelemetry-browser",
  "bugs": "https://github.com/open-telemetry/opentelemetry-browser/issues",
  "license": "Apache-2.0",
  "author": "OpenTelemetry Authors",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-telemetry/opentelemetry-browser.git",
    "directory": "packages/test-utils"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "node -e \"fs.rmSync('dist', {recursive: true, force: true})\"",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage"
  }
}
